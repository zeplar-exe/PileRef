<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PileRef.NoteView">
    <StackPanel Orientation="Vertical">
        <TextBox x:Name="v_Title" IsReadOnly="{Binding NotEditingTitle}"
                 HorizontalAlignment="Stretch" TextAlignment="Center" 
                 Text="{Binding Note.Title}"></TextBox>
        <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBox x:Name="v_Content" IsReadOnly="{Binding NotEditingContent}"
                     BorderThickness="0"
                     AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding Note.Text}"></TextBox>
        </ScrollViewer>
    </StackPanel>
</UserControl>
