<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PileRef.NoteView">
    <Grid RowDefinitions="Auto, *">
        <TextBox Grid.Row="0" x:Name="v_Title" IsReadOnly="{Binding !EditingTitle}"
                 HorizontalAlignment="Stretch" TextAlignment="Center" 
                 Text="{Binding Note.Title}"></TextBox>
        <ContentControl Grid.Row="1">
            <TextBox x:Name="v_Content" IsReadOnly="{Binding !EditingContent}"
                     BorderThickness="0" MinHeight="{Binding Note.Height}"
                     AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding Note.Text}"></TextBox>
        </ContentControl>
    </Grid>
</UserControl>
